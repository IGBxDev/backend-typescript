{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs", 
    "allowJs": true,
    "esModuleInterop": true,  
    "skipLibCheck": true ,           
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*.ts"
  ]
}
